- if current_user.admin?
  .col-md-3
    .panel.panel-default
      .panel-heading
        %h4 Actions
      .panel-body
        .form-group
          = link_to 'Create Topic', new_topic_path, class: 'btn btn-primary'
.col-md-8{ class: ('col-md-offset-2' unless current_user.admin?) }
  .panel.panel-default
    .panel-heading
      %h4 Bets
    .panel-body
      .row
        %table.table.table-striped.table-hover
          %thead
            %tr.row
              %th.col-md-2 Topic
              %th.col-md-2 Value
              %th.col-md-2 Amount Owed
              %th.col-md-2 Actual Value
              %th.col-md-4 Actions
          %tbody.row
            = render @bets
